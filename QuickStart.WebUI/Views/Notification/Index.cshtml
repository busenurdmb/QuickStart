@model List<QuickStart.WebUI.Dtos.Notification.ResultNotificaitonWithNotificationTypeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout/Index.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildrimler</h4>
            <p class="card-description">
                Bildirim<code>Listesi</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>İçerik</th>
                            <th>Tür</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.notificationId</td>
                                <td>@item.title</td>
                                <td>@item.content</td>
                                <td>@item.notificationTypeName</td>
                                <td>@(item.isRead ? "Okundu" : "Okunmadı")</td>
                                <td><a href="/Service/DeleteService/@item.notificationId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Service/UpdateService/@item.notificationId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Testimonial/UpdateTestimonial" class="btn btn-success">Yeni Bildirim Ekleme Sayfası</a>
            </div>
        </div>
    </div>
</div>


